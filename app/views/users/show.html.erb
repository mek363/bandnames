<% provide(:title, @user.name) %>
<h1>
  <table>
    <tbody>
      <tr align='center'> 
        <td><%= gravatar_for @user %></td>
        <td><%= @user.name %></td>
      </tr>
    </tbody>
  </table>
</h1>
<% if @bandnames.any? %>
  <h2>Band Names (<%= @bandnames.count %>)</h2>
  <table class="tablemd table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Rank</th>
      </tr>
    </thead>
    <tbody>
          <%= render @bandnames %>
    </tbody>
  </table>
  <%= will_paginate @bandnames %>
<% end %>
<br>
<p><%= link_to "Home", root_path, :class => "btn btn-primary" %></p>

