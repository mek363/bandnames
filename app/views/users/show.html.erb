<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.bandnames.any? %>
      <h3>Band Names (<%= @user.bandnames.count %>)</h3>
    <% end %>
  </div>
</div>